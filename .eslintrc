{ 
	parser: "babel-eslint",
	extends: "eslint-config-airbnb",
	env: {
		"browser": true,
		"node": true,
		"mocha": true
	},
	plugins: [
		"react", "import"
	],
	"settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpackConfigDev.js"
        }
      }
    },
	"rules": {
		"arrow-spacing": 0,
		"arrow-body-style": 0,
		"comma-dangle": 0,
		"func-names": 0,
		"import/no-extraneous-dependencies": 0,
		"indent": [2, "tab"],
		"no-tabs": 0,
		"no-underscore-dangle": 0,
		"react/forbid-prop-types": 0,
		"react/jsx-filename-extension": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"space-before-function-paren": 0,
	},
}
